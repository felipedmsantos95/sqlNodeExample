<% include partials/header.ejs %>
    <div class="table-wrapper">
        <% if (usuarios.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Nome</th>
                        <th scope="col">Idade</th>
                        <th scope="col">Endereço</th>
                        <th scope="col">E-mail</th>
                        <th scope="col">Telefone</th>
                    </tr>
                </thead>
                <tbody>
                    <% usuarios.forEach((usuario, index) => { %>
                        <tr>
                            <th scope="row"><%= usuario.id %></th>
                            <td><%= usuario.nome %></td>
                            <td><%= usuario.idade %></td>
                            <td><%= usuario.endereco %></td>
                            <td><%= usuario.email %></td>
                            <td><%= usuario.telefone %></td>
                            <td>
                                <a href="/edit/<%= usuario.id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Editar</a>
                                <a href="/delete/<%= usuario.id %>" class="btn btn-sm btn-danger">Excluir</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">Não foram encontrados usuários. Clique <a href="/add" >aqui</a> para cadastrar usuários.</p>
        <% } %>
    </div>
</div>
</body>
</html>